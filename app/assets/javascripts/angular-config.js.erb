var app = angular.module('lolstatsdb', ['ngRoute', 'ui.bootstrap', 'angularCharts'])

app.config(['$routeProvider',function($routeProvider) {
  $routeProvider.when('/',{
    templateUrl: "<%= asset_path('welcome.html') %>",
  })
  .when('/summoner/:code/', {
    templateUrl: "<%= asset_path('welcome.html') %>",
  })
  .when('/summoner/:code/:summonerId', {
    templateUrl: "<%= asset_path('summoner.html') %>",
    controller: "SummonerCtrl"
  })
  .otherwise({
    redirectTo: '/'
  });
}]);
